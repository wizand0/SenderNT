<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application dark theme -->
    <style name="Base.Theme.SenderNT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Цвета для тёмной темы -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- Бирюзовый -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item> <!-- Тёмно-синий -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item> <!-- Белый текст -->
        <item name="colorSecondary">@color/colorSecondary</item> <!-- Серо-голубой -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item> <!-- Чёрный -->
        <item name="colorSurface">@color/colorSurface</item> <!-- Серый фон -->
        <item name="colorError">@color/colorError</item> <!-- Красный -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item> <!-- Тёмный синий -->
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="subtitleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.SenderNT" parent="Base.Theme.SenderNT" />
</resources>
